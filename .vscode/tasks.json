{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build OS",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Run OS",
            "type": "shell",
            "command": "qemu-system-x86_64 -drive file=os-image,format=raw",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}